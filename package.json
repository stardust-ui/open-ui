{
  "name": "@open-ui/specifications",
  "version": "1.0.0",
  "repository": "https://github.com/stardust-ui/specifications",
  "scripts": {
    "build": "kill-port 3000 && (yarn start &) && wait-on http-get://localhost:3000 && kill-port 3000 && yarn build",
    "predeploy": "yarn build",
    "deploy": "echo \"open-ui.org\" > .docz/dist/CNAME && gh-pages -d .docz/dist -m \"deploy docs [ci skip]\"",
    "start": "cross-env BROWSER=NONE docz dev"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write",
      "git add"
    ],
    "**/*.md": [
      "prettier --parser markdown --write",
      "git add"
    ],
    "**/*.mdx": [
      "prettier --parser mdx --write",
      "git add"
    ]
  },
  "dependencies": {
    "lodash": "^4.17.15",
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "docz": "^2.0.0-rc.9",
    "gatsby": "^2.15.1",
    "gatsby-theme-docz": "2.0.0-rc.9",
    "gh-pages": "^2.0.1",
    "husky": "^3.0.4",
    "json5-loader": "^3.0.0",
    "kill-port": "^1.5.1",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2",
    "wait-on": "^3.3.0"
  }
}
