{
  "name": "@open-ui/specifications",
  "version": "1.0.0",
  "repository": "https://github.com/stardust-ui/specifications",
  "scripts": {
    "build": "docz build",
    "predeploy": "yarn build",
    "deploy": "gh-pages -d .docz/dist -m \"deploy docs [ci skip]\"",
    "start": "cross-env BROWSER=NONE docz dev"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write",
      "git add"
    ],
    "**/*.md": [
      "prettier --parser markdown --write",
      "git add"
    ],
    "**/*.mdx": [
      "prettier --parser mdx --write",
      "git add"
    ]
  },
  "dependencies": {
    "cross-env": "^5.2.0",
    "docz": "^2.0.0-rc.8",
    "gatsby": "^2.14.6",
    "gatsby-theme-docz": "2.0.0-rc.8",
    "gh-pages": "^2.0.1",
    "husky": "^3.0.0",
    "json5-loader": "^3.0.0",
    "lint-staged": "^9.2.0",
    "lodash": "^4.17.15",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "to-style": "^1.3.3"
  }
}
