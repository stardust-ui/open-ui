{
  "name": "@stardust-ui/specifications",
  "version": "1.0.0",
  "repository": "https://github.com/stardust-ui/specifications",
  "devDependencies": {
    "docz": "^0.12.13",
    "gh-pages": "^2.0.1",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.2"
  },
  "scripts": {
    "build": "docz build",
    "predeploy": "yarn build",
    "deploy": "gh-pages -d .docz/dist -m \"deploy docs [ci skip]\"",
    "start": "docz dev"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write",
      "git add"
    ],
    "**/*.md": [
      "prettier --parser markdown --write",
      "git add"
    ],
    "**/*.mdx": [
      "prettier --parser mdx --write",
      "git add"
    ]
  }
}
