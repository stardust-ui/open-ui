{
  "name": "@stardust-ui/specifications",
  "version": "1.0.0",
  "repository": "https://github.com/stardust-ui/specifications",
  "devDependencies": {
    "docz": "^1.2.0",
    "docz-theme-default": "^1.2.0",
    "gh-pages": "^2.0.1",
    "husky": "^3.0.0",
    "json5-loader": "^3.0.0",
    "lint-staged": "^9.2.0",
    "lodash": "^4.17.15",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "remark-emoji": "^2.0.2",
    "remark-images": "^1.0.0",
    "webpack-merge": "^4.2.1"
  },
  "scripts": {
    "build": "docz build",
    "predeploy": "yarn build",
    "deploy": "gh-pages -d .docz/dist -m \"deploy docs [ci skip]\"",
    "start": "docz dev"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write",
      "git add"
    ],
    "**/*.md": [
      "prettier --parser markdown --write",
      "git add"
    ],
    "**/*.mdx": [
      "prettier --parser mdx --write",
      "git add"
    ]
  }
}
