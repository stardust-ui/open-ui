{
  $id: 'component.schema.json',
  $schema: 'http://json-schema.org/draft-07/schema#',
  title: 'Component',
  description: 'A UI Component definition.',
  type: 'object',
  properties: {
    name: {
      description: 'The name of the component as defined in the design system.',
      type: 'string',
    },

    url: {
      description: 'The url to the component doc page.',
      type: 'string',
    },

    definition: {
      type: 'string',
      description: "This should be the formal definition of the component. It usually describes it's intended purpose.",
    },

    category: {
      type: 'string',
      description: 'The heading under which the component is classified or cataloged in the design system.',
    },

    anatomy: {
      type: 'array',
      items: { $ref: './component-part.schema.json5' },
      uniqueItems: true,
    },

    concepts: {
      type: 'array',
      items: {
        type: 'object',
        properties: {
          name: { type: 'string' },
          image: { type: 'string' },
        },
        required: ['name'],
      },
    },

    callbacks: {
      type: 'array',
      items: { $ref: './component-callback.schema.json5' },
      uniqueItems: true,
    },
  },

  required: ['name', 'category', 'url'],
}
